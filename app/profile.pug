                    .line
                    .profile-button2.profile-buttonClose.align-items-center.justify-content-center
                        img.arrow(src="img/profile/profile-arrowDown.png", alt="profile-arrowDown")
                    .profile-button2.profile-buttonOpen.align-items-center.justify-content-center
