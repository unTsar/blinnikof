			$('#vimeo4-load').click(function(){
				$('#vimeo-video-container').append('<iframe id="vimeo-video" src="https://player.vimeo.com/video/414558168?color=ff3536&amp;autoplay=true&amp;" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>')
			})

			$('.popup-open').click(function(){
				$('body').addClass('ovh');
				$('.vimeo-video-popup').fadeIn(250);
				var vimeo = new Vimeo.Player('vimeo-video');
				vimeo.play();
			});
			$('#vimeo-video-container').click(function(e){
				if (!$('iframe').is(e.target) && $('iframe').has(e.target).length === 0) {
					$('.vimeo-video-popup').fadeOut(250);
					$(this).children('iframe').remove();
					$('body').removeClass('ovh');
				}
				player2.setMuted(true);
				player2.play();
			});

			//-var player1 = new Vimeo.Player('vimeo1');
			var player2 = new Vimeo.Player('vimeo2');

			//- player1.on('play', function() {
			//- 	console.log('Played the video1');
			//- });
			player2.on('play', function() {
				console.log('Played the video2');
			});

			nutritionInterval = setInterval(nutritionChange, 5000);

			let nutritionChangeRun = true;
			function nutritionChange(){
				$('.nutrition-phone-view').each(function(i){
					if(!nutritionChangeRun) return false;
					setTimeout(function(){
						if(!nutritionChangeRun) return false;
						console.log(i)
						$('.nutrition-phone-view').fadeOut(350);
						$('#nutrition-phone-view' + (i + 1)).delay(350).fadeIn(350);
					}, 1500 + i * 1500)
				});
			}
			$(window).blur(function(){
				nutritionChangeRun = false;
			});
			$(window).focus(function(){
				nutritionChangeRun = true;
			});
			$('.nutrition-view-link').each(function(i){
				let nutritionScroll;
				let nutritionLeave;
				let nutritionTimeout1;
				$(this).mouseenter(function(){
					nutritionChangeRun = false;
					clearInterval(nutritionInterval);
					console.log('enter')
					clearTimeout(nutritionLeave);
					clearTimeout(nutritionScroll);
					nutritionTimeout1 = setTimeout(function(){
						$('.nutrition-phone-view').fadeOut(350);
						$('#nutrition-phone-view' + (i + 1)).delay(350).fadeIn(350);
					}, 100);
				});
				$(this).mouseleave(function(){
					clearTimeout(nutritionTimeout1);
					nutritionLeave = setTimeout(function(){
						nutritionChangeRun = true;
						nutritionInterval = setInterval(nutritionChange, 5000);
					}, 10)
					console.log('leave');
				});
				$(this).click(function(){
					nutritionChangeRun = false;
					clearInterval(nutritionInterval);
					clearTimeout(nutritionTimeout1);
					clearTimeout(nutritionScroll);
					$('.nutrition-phone-view').fadeOut(350);
					$('#nutrition-phone-view' + (i + 1)).delay(350).fadeIn(350);
					$(window).scroll(function(){
						nutritionScroll = setTimeout(function(){
							nutritionChangeRun = true;
							nutritionInterval = setInterval(nutritionChange, 5000);
						}, 10)
					});
				});
			});	

			$('#viktoria-link-more').click(function(){
				const viktoriaLinkText1 = 'Узнать больше';
				const viktoriaLinkText2 = 'Скрыть информацию';
				$('#viktoria-hidden').slideToggle(250);
				if($('#viktoria-hidden').hasClass('active')){
					$('#viktoria-hidden').removeClass('active');
					$(this).text(viktoriaLinkText1);
				}else{
					$('#viktoria-hidden').addClass('active');
					$(this).text(viktoriaLinkText2);
				}
			});
		});
