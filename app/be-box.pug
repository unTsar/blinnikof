		})

		function existVerticalScroll() {
			return $('body').outerHeight() > $(window).innerHeight()
		}


		$('.load-vimeo-video').click(function(){
			if(existVerticalScroll()) { 
				wScrollTop = $(document).scrollTop()
				$('body').css('top', '-' + wScrollTop + 'px' )
				$('body').addClass('body-fix')
			}

			$('.vimeo-video-popup').fadeIn(250)
			var vimeo = new Vimeo.Player('vimeo-video');
			vimeo.play()

		})

		$('#vimeo-video-container').click(function(e){
			if (!$('iframe').is(e.target) && $('iframe').has(e.target).length === 0) {
				$('.vimeo-video-popup').fadeOut(250)
				$(this).children('iframe').remove()
				$('body').removeClass('body-fix')
				$('body').css('top', '0')
				$(document).scrollTop(wScrollTop)
				//- alert(wScrollTop)
			}
		})
		//- Owl carousel

		$('#gym-carousel').owlCarousel({
			items: 1,
			loop: true,
			dots: false,
			nav: true,
			responsive: {
				960: {
					stagePadding: 100,
				},
				1367: {
					stagePadding: 244,
				}
			},
			margin: 20,
			autoplay: 2000,
		})

		$(document).ready(function(){


			$(window).scroll(function(){
				parallaxScroll()
			});

			function parallaxScroll(){
				var scrolled1 = $(window).scrollTop() - $('.parallax-elem-1').offset().top + 300
				var scrolled2 = $(window).scrollTop() - $('.parallax-elem-2').offset().top + 300
				//- alert(scrolled)
				//- $('.parallax-elem-rel-8').css('top',(0-(scrolled*.8))+'px');
				$('.parallax-elem-1').css('top',(0-(scrolled1*0.25))+'px');
				$('.parallax-elem-2').css('top',(0-(scrolled2*0.25))+'px');
			}

			var waypWantsTo = new Waypoint({
				element: $('#wantsTo'),
				handler: function() {
					$.each($('.wT-li'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("active");
						}, 0 + (i * 500));
					});
				}
			})
			var waypWantsToFb = new Waypoint({
				element: $('#wantsTo-fb'),
				handler: function() {
					$('.fb-img').addClass('active')
				},
				offset: 500
			})
			var waypWhatGetAdvantages = new Waypoint({
				element: $('#whatGet-advantages'),
				handler: function() {
					$.each($('.whatGet-item').children('img'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("animate__animated animate__fadeIn animate__slow");
						}, 0 + (i * 500));
					});
					$.each($('.whatGet-item').children('p'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("animate__animated animate__fadeInLeft");
						}, 0 + (i * 500));
					});
				},
				offset: 500
			})
			var waypAntidepr = new Waypoint({
				element: $('#antidepr'),
				handler: function() {
					$('#antidepr').addClass('animate__animated animate__slow animate__fadeIn')

					$.each($('#antidepr').find('img.cross'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("db animate__animated animate__faster animate__bounceIn");
						}, 1000 + (i * 500));
					});
				},
				offset: 500
			})
			var waypReasons = new Waypoint({
				element: $('#reasons'),
				handler: function() {
					$.each($('#reasons').find('.reasons-item'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("animate__animated animate__fast animate__fadeInUp");
						}, 0 + (i * 250));
					});
				},
				offset: 100
			})
			var waypVideos = new Waypoint({
				element: $('#videos'),
				handler: function() {
					$('#videos').find('.container').addClass('active')
					$.each($('#videos').find('.video'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("animate__animated animate__zoomIn");
						}, 500 + (i * 250));
					});
				},
				offset: 500
			})
			var waypTrainer = new Waypoint({
				element: $('#trainer'),
				handler: function() {
					$.each($('#trainer').find('img.aim'), function(i, el) {
						setTimeout(function() {
							$(el).addClass("db animate__animated animate__faster animate__flash");
						}, 500 + (i * 500));
					});
					setTimeout(function() {
						$('#trainer').find('.trainer-img').addClass('animate__animated animate__zoomIn')
					}, 750)
				},
				offset: 500
			})
			var waypGym = new Waypoint({
				element: $('#gym'),
				handler: function() {
					$('#gym').find('h2').addClass('animate__animated animate__flipInY')
				},
				offset: 200
			})
			var waypCourse = new Waypoint({
				element: $('#buyCourse'),
				handler: function() {
					$('#buyCourse').find('h2').addClass('animate__animated animate__slideInLeft')
					setTimeout(function() {
						$('#buyCourse').find('ul, .video').addClass('animate__animated animate__fadeInUp')
					}, 750)
				},
				offset: 500
			})







		});
